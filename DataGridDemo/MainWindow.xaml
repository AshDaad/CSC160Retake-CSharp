<Window x:Class="DataGridDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridDemo"
        mc:Ignorable="d"
        Title="DataGridDemo" Height="350" Width="525">
    <StackPanel x:Name="MainPanel">
        <Label FontSize="14"
               Margin="30"
               Content="{Binding ElementName=ItemsDataGrid, Path=Items.Count}"/>
        <Button x:Name="AddDawgButton" Content="Add Dawg" Click="AddDawgButton_Click"/>
        <DataGrid x:Name="ItemsDataGrid" HorizontalScrollBarVisibility="Auto" Height="200"/>
    </StackPanel>
</Window>
